<html>
    <head>
        <title>Librarian Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>Librarian's Home Page</h1>
            <form action='/librarian_home' method='post'>
                <label for='title'>Title:</label>
                <input id='title' name='title' type='text'>

                <!-- author name form to go here -->

                <button type='submit'>Add Book</button>
            </form>

            {% if books is not empty %}
                <p>Here are all of your current titles:</p>
                <ul>
                    {% for book in books %}
                    <li><a href="/books/{{ book.getId }}">{{ book.getTitle }}</li>
                </ul>
                    {% endfor %}
            {% endif %}

            <a href='/'>Library Home</a>

            <form action="/clear_library" method="post">
                <button type="submit" class="btn-danger">Delete library!</button>
            </form>
        </div>
    </body>
</html>
