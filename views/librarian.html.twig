<html>
    <head>
        <title>Librarian Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <h1>Librarian's Home Page</h1>
            <form action='/librarian_home' method='post'>
                <label for='title'>Title:</label>
                <input id='title' name='title' type='text'>

                <label for='author_first_name'>Author First Name:</label>
                <input id='author_first_name' name='author_first_name' type='text'>

                <label for='author_last_name'>Author Last Name:</label>
                <input id='author_last_name' name='author_last_name' type='text'>


                <button type='submit'>Add Book</button>
            </form>

            <h2>Search</h2>
                <form action="/search/title" method="post">
                    <label for="search_title">Search Title</label>
                    <input type="text" name="search_title" id="search_title">

                    <button type="submit">Submit</button>
                </form>

                <form action="/search/author" method="post">
                    <label for="search_author">Search Author</label>
                    <input type="text" name="search_author" id="search_author">

                    <button type="submit">Submit</button>
                </form>

            {% if books is not empty %}
                <p>Here are all of your current titles:</p>
                <ul>
                    {% for book in books %}
                    <li><a href="/books/{{ book.getId }}">{{ book.getTitle }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}

            <a href='/'>Library Home</a>

            <form action="/clear_library" method="post">
                <button type="submit" class="btn-danger">Delete library!</button>
            </form>
        </div>
    </body>
</html>
